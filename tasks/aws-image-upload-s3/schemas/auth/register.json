{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "username",
    "email",
    "password"
  ],
  "properties": {
    "username": {
      "type": "string",
      "minLength": 2,
      "maxLength": 32
    },
    "email": {
      "type": "string",
      "format": "email",
      "minLength": 3,
      "maxLength": 256
    },
    "password": {
      "type": "string",
      "minLength": 6,
      "maxLength": 64
    }
  }
}
